<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BmSalaryRecordMapper">
    <sql id="deleteFlagHql">
        and deleted = ${@com.ws.bm.common.constant.BaseConstant@FALSE}
    </sql>

    <select id="getMoneyStatistic" resultType="String">
        select sum(salary) from bm_salary_record where DATE_FORMAT(salary_date,#{time}) = DATE_FORMAT(now(),#{time})
        <include refid="deleteFlagHql"/>
    </select>
</mapper>