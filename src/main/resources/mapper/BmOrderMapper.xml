<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ws.bm.mapper.BmOrderMapper">

    <sql id="selectOrderHql">
        select order_id,order_type,dealer_id,order_date,pay_flag,remark,create_date, update_date, deleted
        from bm_order
    </sql>

    <sql id="selectOrderDetailHql">
        select id,material_id,num,money,order_id,remark,create_date, update_date, deleted
        from bm_order_detail
    </sql>

    <sql id="deleteFlagHql">
        and deleted = ${@com.ws.bm.common.constant.BaseConstant@FALSE}
    </sql>

    <insert id="addBmOrder">
        insert into bm_order (
        <if test="orderId != null and orderId != ''">order_id,</if>
        <if test="orderType != null and orderType != ''">order_type,</if>
        <if test="dealerId != null and dealerId != ''">dealer_id,</if>
        <if test="orderDate != null">order_date,</if>
        <if test="payFlag != null and payFlag != ''">pay_flag,</if>
        <if test="remark != null and remark != ''">remark,</if>
        <if test="createDate != null">create_date,</if>
        <if test="updateDate != null">update_date,</if>
        <if test="deleted != null and deleted != ''">deleted</if>
        ) values (
        <if test="orderId != null and orderId != ''">#{orderId},</if>
        <if test="orderType != null and orderType != ''">#{orderType},</if>
        <if test="dealerId != null and dealerId != ''">#{dealerId},</if>
        <if test="orderDate != null">#{orderDate},</if>
        <if test="payFlag != null and payFlag != ''">#{payFlag},</if>
        <if test="remark != null and remark != ''">#{remark},</if>
        <if test="createDate != null">#{createDate},</if>
        <if test="updateDate != null">#{updateDate},</if>
        <if test="deleted != null and deleted != ''">#{deleted}</if>
        )
    </insert>

    <insert id="batchAddBmOrderDetail">
        insert into bm_order_detail(id, material_id, num, money, order_id, remark, create_date, update_date,deleted) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.id},#{item.materialId},#{item.num},#{item.money},#{item.orderId},#{item.remark},#{item.createDate},#{item.updateDate},${@com.ws.bm.common.constant.BaseConstant@FALSE})
        </foreach>
    </insert>

    <select id="getBmOrder" parameterType="String" resultType="BmOrder">
        <include refid="selectOrderHql"/>
        <where>
            order_id = #{bmOrderId}
        </where>
        <include refid="deleteFlagHql"/>
        order by update_date desc
    </select>

    <update id="updateBmOrder" parameterType="BmOrder">
        update bm_order
        <set>
            <if test="dealerId != null and dealerId != ''">dealer_id = #{dealerId},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="orderDate != null">order_date = #{orderDate},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
            <if test="updateDate != null">update_date = #{updateDate},</if>
        </set>
        where id = #{id}
    </update>

    <select id="getBmOrderDetailByOrderId" parameterType="String" resultType="BmOrderDetail">
        <include refid="selectOrderDetailHql"/>
        <where>
            order_id = #{orderId}
        </where>
        <include refid="deleteFlagHql"/>
        order by update_date desc
    </select>

    <update id="batchDeletedBmOrderDetail" parameterType="String">
        update bm_order set deleted = ${@com.ws.bm.common.constant.BaseConstant@TRUE} , update_date = sysdate()
        where order_id = #{bmOrderId}
    </update>

    <select id="queryBmOrder" parameterType="BmOrder" resultType="BmOrder">
        <include refid="selectOrderHql"/>
        <where>
            <if test="params != null and params != '' ">
                <if test="params.dealerName != null and params.dealerName != ''"><!-- 交易人员 -->
                    and dealer_id in (select supplier_id from bm_supplier where supplier_name like concat('%', #{dealerName}, '%') <include refid="deleteFlagHql"/> )
                </if>
                <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                    and date_format(order_date,'%y%m%d') &gt;= date_format(#{params.beginDate},'%y%m%d')
                </if>
                <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                    and date_format(order_date,'%y%m%d') &lt;= date_format(#{params.endDate},'%y%m%d')
                </if>
            </if>
            <include refid="deleteFlagHql"/>
            order by order_date desc
        </where>
    </select>

    <update id="deleteBmOrder" parameterType="String">
        update bm_order set deleted = ${@com.ws.bm.common.constant.BaseConstant@TRUE} , update_date = sysdate()
        where order_id in
        <foreach collection="bmOrderIds" item="bmOrderId" open="(" separator="," close=")">
            #{bmOrderId}
        </foreach>
    </update>

    <update id="deleteBmOrderDetails" parameterType="String">
        update bm_order_detail set deleted = ${@com.ws.bm.common.constant.BaseConstant@TRUE} , update_date = sysdate()
        where order_id in
        <foreach collection="bmOrderIds" item="bmOrderId" open="(" separator="," close=")">
            #{bmOrderId}
        </foreach>
    </update>


</mapper>